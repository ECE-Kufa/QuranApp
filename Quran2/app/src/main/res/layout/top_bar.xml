<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/top_bar_linear_layout_file"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/surah_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="سورة البقرة"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/top_page_number_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/juzu_hizb_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#000000"
        android:text="الجزء الأول"
        />
</LinearLayout>
